</span><span class='line'>        <span class="ni">&amp;lt;</span>sources<span class="ni">&amp;gt;</span>
</span><span class='line'>            <span class="ni">&amp;lt;</span>path location=&quot;${src.dir}&quot; /<span class="ni">&amp;gt;</span>
